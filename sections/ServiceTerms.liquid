<style>
  [data-section-id="{{ section.id }}"] {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.top_one |  append: 'px' }};
    padding-bottom: {{ section.settings.bottom_one |  append: 'px' }};
  }
  .ServiceTerms_h2 {
    text-align: center;
  }
  .ServiceTerms_span {
    text-align: center;
    font-size: 1.6rem;
  }
  .ServiceTerms_flex {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  .ServiceTerms_flex_box {
    flex: 1 1 25%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .ServiceTerms_flex_box .numbers-card__icon {
    margin: 0 1rem 0 0;
  }
  .ServiceTerms_flex_box h2 {
    font-size: 2rem;
    margin: 0;
  }
  .ServiceTerms_flex_box .numbers-card__icon .icon {
    font-size: 3.2rem;
  }
  @media(max-width: 1250px) {
    .ServiceTerms_flex_box .numbers-card__icon {
      margin: 0 0.5rem 0 0;
    }
    .ServiceTerms_flex_box h2 {
      font-size: 1.6rem;
    }
    .ServiceTerms_flex_box .numbers-card__icon .icon {
      font-size: 2.8rem;
    }
  }
  @media(max-width: 768px) {
    [data-section-id="{{ section.id }}"] {
    padding-top: {{ section.settings.top_one_mic |  append: 'px' }};
    padding-bottom: {{ section.settings.bottom_one_mic |  append: 'px' }};
  }
    .ServiceTerms_flex_box {
      flex: 1 1 45%;
      margin: 0 5px 2rem;
    }
    .ServiceTerms_flex_box .numbers-card__icon .icon {
      font-size: 2.5rem;
    }
    .ServiceTerms_flex_box h2 {
      font-size: 1.4rem;
    }
    .ServiceTerms_flex {
        row-gap: 10px;
    }
  }
</style>

<div data-section-id="{{ section.id }}" class="ServiceTerms">
  <div class="container">
    <h2 class="ServiceTerms_h2 title title--simple">
      {{ section.settings.title | newline_to_br }}
    </h2>
    <div class="ServiceTerms_span">
      <span>{{ section.settings.Copywriting | newline_to_br }}</span>
    </div>
    <div class="ServiceTerms_flex">
      {% for block in section.blocks %}
        <div class="ServiceTerms_flex_box">
          {% if block.settings.icon != 'none' %}
            <div class="numbers-card__icon numbers-card__icon--{{ block.settings.icon_color }} {% if block.settings.icon == 'none' and block.settings.image == blank %}numbers-card__icon--empty{% endif %}">
              <i
                class="icon icon-pack icon-{{ block.settings.icon }} {% if block.settings.icon_color == 'colored' and block.settings.icon_fill_type == 'gradient' %} text-gradient {% endif %}"
              ></i>
            </div>
            <h2>{{ block.settings.title }}</h2>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

