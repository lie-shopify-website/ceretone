<style>
  [data-section-id="{{ section.id }}"] {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top | append: 'px' }};
    padding-bottom: {{ section.settings.padding_bottom | append: 'px' }};
  }
  [data-section-id="{{ section.id }}"] h2 {
    margin: 0;
    text-align: center;
  }
  .HearClearly_box {
    display: flex;
    justify-content: space-between;
    margin: 10rem auto;
  }
  .HearClearly_left {
    width: 15%;
    display: flex;
    flex-flow: column;
    justify-content: space-between;
    align-items: center;
  }
  .HearClearly_left h4 {
    text-align: center;
    margin: 0;
  }
  .HearClearly_left p {
    margin: 0;
  }
  .HearClearly_right {
    width: 80%;
    position: relative;
  }
  .HearClearly_right_box {
    width: 12rem;
    text-align: center;
  }
  .HearClearly_right_box p {
    margin: 0;
  }
  .HearClearly_PC {
    width: 70%;
    display: block;
  }
  .HearClearly_box_M {
    display: none;
  }
  .custom-dashed-line {
    position: absolute;
    width: 10%;
    height: 2px;
    background: repeating-linear-gradient(to right, rgb(71, 71, 71) 0, rgb(71, 71, 71) 5px, /* 虚线长度 */ transparent 5px, transparent 8px /* 间距 */);
    top: 8%;
    left: -5%;
  }
  .custom-dashed-line1 {
    position: absolute;
    width: 10%;
    height: 2px;
    background: repeating-linear-gradient(to right, rgb(71, 71, 71) 0, rgb(71, 71, 71) 5px, /* 虚线长度 */ transparent 5px, transparent 8px /* 间距 */);
    top: 94%;
    left: -5%;
  }
  {% for block in section.blocks %}
    [data-section-id="{{ section.id }}"] .HearClearly{{ forloop.index }} {
      position: absolute;
      top: {{ block.settings.top | append: '%' }};
      left: {{ block.settings.left | append: '%' }};
    }
  {% endfor %}
  @media(max-width: 768px) {
    .HearClearly_box {
      display: none;
    }
    .HearClearly_box_M {
      display: block;
    }
    [data-section-id="{{ section.id }}"] h2 {
      width: 90%;
      margin: 0 auto;
    }
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.padding_top_M | append: 'px' }};
      padding-bottom: {{ section.settings.padding_bottom_M | append: 'px' }};
    }
    .HearClearly_box_M_bo {
      position: relative;
    }
    .HearClearly_M {
      margin: 0 auto;
      display: block;
    }
    .HearClearly_box_M_top {
      position: relative;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .HearClearly_box_M_top h4 {
      text-align: center;
    }
    .HearClearly_box_M_top_img {
      width: 10rem;
    }
    .HearClearly_box_M_top p {
      text-align: center;
    }
    .HearClearly_right_box {
      width: 10rem;
      text-align: center;
    }
    .custom-dashed-line_m {
      position: absolute;
      width: 2px;
      height: 60px;
      background: repeating-linear-gradient(to bottom, /* 改为向下方向 */ rgb(71, 71, 71) 0, rgb(71, 71, 71) 5px, /* 每段虚线的长度 */ transparent 5px, /* 透明的开始位置 */ transparent 8px /* 间距 */);
      top: 80%;
      left: 12%;
    }
    .custom-dashed-line1_m {
      position: absolute;
      width: 2px;
      height: 60px;
      background: repeating-linear-gradient(to bottom, /* 改为向下方向 */ rgb(71, 71, 71) 0, rgb(71, 71, 71) 5px, /* 每段虚线的长度 */ transparent 5px, /* 透明的开始位置 */ transparent 8px /* 间距 */);
      top: 80%;
      left: 84%;
    }
    {% for block in section.blocks %}
      [data-section-id="{{ section.id }}"] .HearClearly{{ forloop.index }} {
        position: absolute;
        top: {{ block.settings.top_M | append: '%' }};
        left: {{ block.settings.left_M | append: '%' }};
      }
    {% endfor %}
  }
</style>

<div data-section-id="{{ section.id }}" class="HearClearly">
  {% if section.settings.tilie != blank %}
    <h2 class="">{{ section.settings.tilie }}</h2>
  {% endif %}
  <div class="container HearClearly_box">
    <div class="HearClearly_left">
      {% if section.settings.LOGO != blank %}
        <img
          class="HearClearly_PC"
          src="{{ section.settings.LOGO | img_url: '500x' }}"
          alt=""
        >
      {% endif %}
      {% if section.settings.heading != blank %}
        <H4>{{ section.settings.heading }}</H4>
      {% endif %}
      {% if section.settings.title != blank %}
        <P>{{ section.settings.title }}</P>
      {% endif %}
    </div>
    <div class="HearClearly_right">
      {% if section.settings.image != blank %}
        <img
          class="HearClearly_PC"
          src="{{ section.settings.image | img_url: '1200x' }}"
          alt=""
        >
      {% endif %}
      {% for block in section.blocks %}
        {% if block.settings.title != blank %}
          <div class="HearClearly_right_box HearClearly{{ forloop.index }}">
            <p>{{ block.settings.title }}</p>
          </div>
        {% endif %}
      {% endfor %}
      <div class="custom-dashed-line"></div>
      <div class="custom-dashed-line1"></div>
    </div>
  </div>
  <div class="container HearClearly_box_M">
    <div class="HearClearly_box_M_top">
      {% if section.settings.title != blank %}
        <P>{{ section.settings.title }}</P>
      {% endif %}
      {% if section.settings.heading != blank %}
        <H4>{{ section.settings.heading }}</H4>
      {% endif %}
      {% if section.settings.LOGO != blank %}
        <img
          class="HearClearly_box_M_top_img"
          src="{{ section.settings.LOGO | img_url: '500x' }}"
          alt=""
        >
      {% endif %}
      <div class="custom-dashed-line_m"></div>
      <div class="custom-dashed-line1_m"></div>
    </div>
    <div class="HearClearly_box_M_bo">
      {% if section.settings.image_m != blank %}
        <img
          class="HearClearly_M"
          src="{{ section.settings.image_m | img_url: '1200x' }}"
          alt=""
        >
      {% endif %}
      {% for block in section.blocks %}
        {% if block.settings.title != blank %}
          <div class="HearClearly_right_box HearClearly{{ forloop.index }}">
            <p>{{ block.settings.title }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  <div class="container Overall">
    {% if section.settings.link != blank %}
      <a class="Overall_btn" href="{{ section.settings.link }}">{{ section.settings.linktext }}</a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "定位图层",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "label": "上边距",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "下边距",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_M",
      "label": "移动端上边距",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_M",
      "label": "移动端下边距",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "default": 0
    }, {
      "type": "color",
      "id": "bg_color",
      "label": "背景颜色",
      "default": "#fff"
    }, {
      "type": "textarea",
      "id": "tilie",
      "label": "标题"
    }, {
      "type": "image_picker",
      "id": "LOGO",
      "label": "LOGO"
    }, {
      "type": "textarea",
      "id": "heading",
      "label": "标题"
    }, {
      "type": "textarea",
      "id": "title",
      "label": "副标题"
    }, {
      "type": "image_picker",
      "id": "image",
      "label": "图片"
    }, {
      "type": "image_picker",
      "id": "image_m",
      "label": "图片"
    }, {
      "type": "text",
      "id": "linktext",
      "label": "链接文本"
    }, {
      "type": "url",
      "id": "link",
      "label": "链接"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "添加文本",
      "limit": 50,
      "settings": [
        {
          "type": "textarea",
          "id": "title",
          "label": "标题"
        },
        {
          "type": "textarea",
          "id": "top",
          "label": "上百分比位置"
        },
        {
          "type": "textarea",
          "id": "left",
          "label": "左百分比位置"
        },
        {
          "type": "textarea",
          "id": "top_M",
          "label": "移动端上百分比位置"
        }, {
          "type": "textarea",
          "id": "left_M",
          "label": "移动端左百分比位置"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "定位图层",
      "blocks": [
        {
          "type": "slide"
        }, {
          "type": "slide"
        }, {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
