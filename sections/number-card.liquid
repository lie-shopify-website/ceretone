<section data-section-id="{{ section.id }}">
    <div class="container">
        <div class="inner">
            {% if section.settings.title != blank %}<div class="title h3">{{ section.settings.title | newline_to_br }}</div>{% endif %}
            {% if section.settings.sub_title != blank %}<div class="sub-title body-large">{{ section.settings.sub_title | newline_to_br }}</div>{% endif %}

            <div class="cards">
              {%- for block in section.blocks -%}
                {% assign arrow = '' %}
                {% if block.settings.arrow == '1' %}
                    {% capture arrow %}<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="122.433px" height="122.88px" viewBox="0 0 122.433 122.88" enable-background="new 0 0 122.433 122.88" xml:space="preserve"><g><polygon fill-rule="evenodd" clip-rule="evenodd" points="61.216,0 0,63.673 39.403,63.673 39.403,122.88 83.033,122.88 83.033,63.673 122.433,63.673 61.216,0"/></g></svg>{% endcapture %}
                {% elsif block.settings.arrow == '2' %}
                    {% capture arrow %}<svg version="1.1" style="transform: rotate(180deg);" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="122.433px" height="122.88px" viewBox="0 0 122.433 122.88" enable-background="new 0 0 122.433 122.88" xml:space="preserve"><g><polygon fill-rule="evenodd" clip-rule="evenodd" points="61.216,0 0,63.673 39.403,63.673 39.403,122.88 83.033,122.88 83.033,63.673 122.433,63.673 61.216,0"/></g></svg>{% endcapture %}
                {% endif %}
              
                <div class="card card-{{ forloop.index }}">
                  <div class="card-title h4">{{ arrow }}{{ block.settings.title }}</div>
                  <div class="card-text body-large">{{ block.settings.info }}</div>
                </div>
              {% endfor %}
            </div>
        </div>
    </div>
</section>

<style>
[data-section-id="{{ section.id }}"] .container {
    padding-top:{{ section.settings.pc_padding_top }}px;
	padding-bottom:{{ section.settings.pc_padding_bottom }}px;
}
@media screen and (max-width: 767px) {
    [data-section-id="{{ section.id }}"] .container {
        padding-top:{{ section.settings.mb_padding_top }}px;
		padding-bottom:{{ section.settings.mb_padding_bottom }}px;
    }
}

.number-card .title {
    text-align: center;
    margin-bottom: 56px;
}
.number-card .sub-title {
    text-align: center;
    margin-top: -40px;
    margin-bottom: 56px;
}
.number-card .cards {
    display: flex;
    --card-gap: 24px;
    gap: var(--card-gap);
    position: relative;
}
.number-card .card {
    flex:0 0 calc(20% - calc(4/5*var(--card-gap)));
    max-width:calc(20% - calc(4/5*var(--card-gap)));
    background: #f5f5f5;
    padding: 40px 20px;
    min-height: 240px;
    border-radius: 10px;
}
.number-card .card svg {
    width: 26px;
    height: 22px;
    margin-right: 5px;
}
.number-card .card-title.h4 {
    margin-bottom: 6px;
    color: #1566e0;
    fill:#1566e0;
}
.number-card .card-text.body-large {
    font-size: 14px;
    color: #666;
}
@media screen and (max-width: 767px) {
  .number-card .title {
      margin-bottom: 24px;
  }
  .number-card .sub-title {
      text-align: center;
      margin-top: -16px;
      margin-bottom: 24px;
  }
  .number-card .cards {
    display:block;
    --card-gap:20px;
    --card-height:170px;
  }
  .number-card .card {
      width: calc(50% - calc(var(--card-gap) / 2));
      max-width: unset;
      background: #f5f5f5;
      padding: 10px;
      min-height: var(--card-height);
      border-radius: 10px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      text-align: center;
      margin-bottom: var(--card-gap);
  }
  .number-card .card-title.h4 {
      margin-bottom: 15px;
      font-size: 26px;
      font-weight: 900;
  }
  .number-card .card.card-2 {
      position: absolute;
      right: 0;
      top: 0;
      min-height: calc(var(--card-height) * 1.8);
  }
  .number-card .card.card-5 {
      position: absolute;
      right: 0;
      bottom: 0;
      min-height: calc(var(--card-height) * 1.2 + var(--card-gap));
      margin-bottom: 0;
  }
}

</style>

<script>
    window.addEventListener("DOMContentLoaded", function () {

    });                       
</script>


{% schema %}
    {
        "name": "Number Card",
        "class":"number-card",
        "settings": [
                { "type": "textarea", "id":"title", "label":"Title"},
                { "type": "textarea", "id":"sub_title", "label":"Sub Title"},

                { "type": "header","content":"PC"},
                { "type": "range", "id": "pc_padding_top", "label": "Top Space", "min": 0, "max": 100, "step": 1, "unit": "px", "default": 0 },
                { "type": "range", "id": "pc_padding_bottom", "label": "Bottom Space", "min": 0, "max": 100, "step": 1, "unit": "px", "default": 0 },
                { "type": "header","content":"Mobile"},
                { "type": "range", "id": "mb_padding_top", "label": "Top Space", "min": 0, "max": 100, "step": 1, "unit": "px", "default": 0 },
                { "type": "range", "id": "mb_padding_bottom", "label": "Bottom Space", "min": 0, "max": 100, "step": 1, "unit": "px", "default": 0 }
        ],
        "max_blocks": 5,
        "blocks": [
          {
            "type": "card",
            "name": "Card",
            "settings": [
              {
                "type": "select",
                "id": "arrow",
                "options": [
                  { "value": "0", "label": "无" },
                  { "value": "1", "label": "上升箭头" },
                  { "value": "2", "label": "下降箭头" }
                ],
                "default": "0",
                "label": "显示箭头"
              },
              { "type": "text", "id":"title", "label":"Title"},
              { "type": "textarea", "id":"info", "label":"Info"},
            ]
          }
        ],
        "presets": [
            {
                "name": "Number Card",
                "category":"Custom"
            }
        ]
    }
{% endschema %}