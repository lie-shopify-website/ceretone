    {
        "name": "Text Image Custom 2",
        "class":"text-image-custom-2",
        "settings": [

                { "type": "header","content":"Item"},
                { "type": "image_picker", "id": "left_image1", "label": "Image", "info": "大图" },
                { "type": "textarea", "id":"title1", "label":"Heading Title 1"},
                { "type": "image_picker", "id": "icon1_img1", "label": "Icon 1", "info": "图标" },
                { "type": "textarea", "id":"icon1_title1", "label":"Icon Title 1"},
                { "type": "textarea", "id":"icon1_info1", "label":"Icon Info 1"},
                { "type": "image_picker", "id": "icon1_img2", "label": "Icon 2", "info": "图标" },
                { "type": "textarea", "id":"icon1_title2", "label":"Icon Title 2"},
                { "type": "textarea", "id":"icon1_info2", "label":"Icon Info 2"},
          
                { "type": "header","content":"Item"},
                { "type": "image_picker", "id": "left_image2", "label": "Image", "info": "大图" },
