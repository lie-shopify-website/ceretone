<style>
  [data-section-id="{{ section.id }}"] {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.top_one |  append: 'rem' }};
    padding-bottom: {{ section.settings.bottom_one |  append: 'rem' }};
  }
  .ProductHelp_h2 {
    text-align: center;
    margin: 0 0 5rem;
  }
  .ProductHelp_flex {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
  }
  .ProductHelp_flex_box_img {
    display: block;
    width: 100%;
    height: auto;
    margin: 0 0 1rem;
  }

  .ProductHelp_flex_box {
    width: calc((100% - 6rem) / 4);
    border-radius: 1.5rem;
    box-sizing: border-box;
    overflow: hidden;
    background-color: #fff;
    box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.5);
  }
  .ProductHelp_flex_box_ProductName {
    margin: 0;
    padding: 1rem;
    background: #DFE4EA;
    font-size: 2.4rem;
    color: #405766;
    text-align: center;
    font-weight: 700;
  }
  .ProductHelp_flex_box_link .ProductHelp_flex_box_btn {
    padding: 0 1rem;
  }
  .ProductHelp_flex_box_link a {
    padding: 1rem 0;
    font-size: 1.6rem;
    color: #405766;
    text-align: center;
    text-decoration: none;
    width: 80%;
    display: block;
    border-bottom: 1px solid #c3c3c3;
    margin: 0 auto;
    position: relative;
  }
  .ProductHelp_flex_box_link a::before {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 2px;
    background-color: #1462D7;
    transform: scaleX(0);
    transition: transform 0.3s ease
    , background-color 0.3s ease;
    transform-origin: bottom right;
  }
  .ProductHelp_flex_box_link a:hover::before {
    transform: scaleX(1);
    transform-origin: bottom left;
  }
  .ProductHelp_flex_box_link a:hover {
    color: #1462D7;
  }
  .ProductHelp_flex_box_btn a {
    padding: 1rem 0;
    font-size: 16px;
    display: block;
    width: 70%;
    margin: 2rem auto;
    background-color: #1462D7;
    color: #fff;
    text-align: center;
    text-decoration: none;
    font-weight: 600;
    border-radius: 1rem;
  }
  .ProductHelp_flex_box_btn a:hover {
    background-color: #fff;
    color: #1462D7
  }
  @media(max-width: 768px) {
    .ProductHelp_flex_box {
      width: calc((100% - 0rem) / 1);
    }
    .ProductHelp_h2 {
      text-align: center;
      margin: 0 0 3rem;
    }
    .ProductHelp_flex_box_ProductName {
      padding: 0.5rem;
      font-size: 2rem;
    }
    .ProductHelp_flex_box_link a {
      padding: 0.5rem 0;
      font-size: 1.4rem;
    }
    .ProductHelp_flex_box_btn a {
      padding: 1rem 0;
    }
  }
</style>

<div data-section-id="{{ section.id }}" class="ProductHelp">
  <div class="container">
    {% if section.settings.title != blank %}
      <h2 class="h2 ProductHelp_h2">{{ section.settings.title }}</h2>
    {% endif %}
    <div class="ProductHelp_flex">
      {% for block in section.blocks %}
        <div class="ProductHelp_flex_box">
          {% if block.settings.image != blank %}
            {{
              block.settings.image
              | image_url: width: block.settings.image.width
              | image_tag:
                loading: 'lazy',
                widths: '375, 768, 998, 1400, 2000, 2200, 2400, 2600, 2800, 3000, 3264, 3400, 3584, 3800, 4000',
                sizes: sizes,
                class: 'ProductHelp_flex_box_img'
            }}
          {% endif %}
          {% if block.settings.ProductName != blank %}
            <p class="ProductHelp_flex_box_ProductName">{{ block.settings.ProductName }}</p>
          {% endif %}
          <div class="ProductHelp_flex_box_link">
            {% if block.settings.link1 != blank %}
              <a href="{{ block.settings.link1 }}">{{ block.settings.link_text1 }}</a>
            {% endif %}
            {% if block.settings.link2 != blank %}
              <a href="{{ block.settings.link2 }}">{{ block.settings.link_text2 }}</a>
            {% endif %}
            {% if block.settings.link3 != blank %}
              <a href="{{ block.settings.link3 }}">{{ block.settings.link_text3 }}</a>
            {% endif %}
            {% if block.settings.link4 != blank %}
              <a href="{{ block.settings.link4 }}">{{ block.settings.link_text4 }}</a>
            {% endif %}
            {% if block.settings.link5 != blank %}
              <a href="{{ block.settings.link5 }}">{{ block.settings.link_text5 }}</a>
            {% endif %}
            {% if block.settings.link6 != blank %}
              <a href="{{ block.settings.link6 }}">{{ block.settings.link_text6 }}</a>
            {% endif %}
          </div>
          <div class="ProductHelp_flex_box_btn">
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}">{{ block.settings.ProductName_text }}</a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
   var slides = document.querySelectorAll('.ProductHelp_flex_box_link');
  var maxHeight = 0;
  slides.forEach(function (slide) {
      var slideHeight = slide.offsetHeight;
      if (slideHeight > maxHeight) {
          maxHeight = slideHeight;
      }
  });
  slides.forEach(function (slide) {
      slide.style.height = maxHeight + 'px';
  });
</script>

