<style>
  [data-section-id="{{ section.id }}"] {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.top_one |  append: 'px' }};
    padding-bottom: {{ section.settings.bottom_one |  append: 'px' }};
  }
  .Position_information_flex {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .Position_information_flex_WT {
    width: 48%;
    border-radius: 24px;
    overflow: hidden;
  }
  .Position_information_flex_WT_img {
    display: block;
    width: 100%;
    height: auto;
  }
  .Position_information_flex_DT {
    width: 48%;
    display: flex;
    flex-direction: column;
  }
  .Position_information_flex_DT_T {
    flex: 0;
  }
  .Position_information_flex_DT_T h2 {
    margin: 0 0 1.5rem;
    font-weight: 700;
  }
  .Position_information_flex_DT_T_text {
    margin: 0 0 1.5rem;
    font-size: 1.8rem;
  }

  .Position_information_flex_DT_B {
    flex: 1;
  }
  .Position_information_flex_DT_B iframe {
    width: 100%;
    height: 100%;
  }
  @media(max-width: 768px) {
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.top_one_mic |  append: 'px' }};
      padding-bottom: {{ section.settings.bottom_one_mic |  append: 'px' }};
    }
    .Position_information_flex {
      display: block;
    }
    .Position_information_flex_WT {
      width: 100%;
    }
    .Position_information_flex_DT {
      width: 100%;
    }
    .Position_information_flex_DT_T {
      text-align: center;
      margin-top: 1rem;
    }
  }
</style>
<div data-section-id="{{ section.id }}" class="Position_information">
  <div class="container Position_information_flex">
    <div class="Position_information_flex_WT">
      {% if section.settings.image != blank %}
        {{
          section.settings.image
          | image_url: width: section.settings.image.width
          | image_tag:
            widths: '360, 533, 720, 940, 1066, 1200, 1400, 1600, 1800, 2000, 2200, 2400, 2600, 2800, 3000, 3264, 3400, 3584, 3800, 4000, 4200, 4400, 4600, 4800, 5000, 5200, 5400, 5600',
            sizes: sizes,
            class: 'Position_information_flex_WT_img'
        }}
      {% endif %}
    </div>
    <div class="Position_information_flex_DT">
      <div class="Position_information_flex_DT_T">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading | newline_to_br }}</h2>
        {% endif %}
        {% if section.settings.text != blank %}
          <div class="Position_information_flex_DT_T_text">{{ section.settings.text | newline_to_br }}</div>
        {% endif %}
      </div>
      {% if section.settings.position != blank %}
        <div class="Position_information_flex_DT_B">
          {{ section.settings.position }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  var positionInformationFlexWTList = document.querySelectorAll('.Position_information_flex_WT');
        var positionInformationFlexDTList = document.querySelectorAll('.Position_information_flex_DT');

        for (var i = 0; i < positionInformationFlexWTList.length; i++) {
            var positionInformationFlexWT = positionInformationFlexWTList[i];
            var positionInformationFlexDT = positionInformationFlexDTList[i];

            var positionInformationFlexWTHeight = positionInformationFlexWT.offsetHeight;
            positionInformationFlexDT.style.height = positionInformationFlexWTHeight + 'px';
        }
</script>
{% schema %}
{
  "name": "位置信息",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "背景颜色",
      "default": "#fff"
    },
    {
      "type": "range",
      "id": "top_one",
      "label": "上边距",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "bottom_one",
      "label": "下边距",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "top_one_mic",
      "label": "移动端上边距",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "default": 20
    }, {
      "type": "range",
      "id": "bottom_one_mic",
      "label": "移动端下边距",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "default": 20
    }, {
      "type": "image_picker",
      "id": "image",
      "label": "图片"
    }, {
      "type": "image_picker",
      "id": "imagemic",
      "label": "移动端图片"
    }, {
      "type": "text",
      "id": "heading",
      "label": "店铺名称"
    }, {
      "type": "textarea",
      "id": "text",
      "label": "店铺信息"
    }, {
      "type": "textarea",
      "id": "position",
      "label": "店铺位置"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "位置信息"
    }
  ]
}
{% endschema %}
