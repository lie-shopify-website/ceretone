{% schema %}
{
    "name": "Custom Our Service",
    "settings": [
        { "type": "header", "content": "标题" },
        { "type": "liquid", "id": "title", "label": "标题" },

        { "type": "header", "content": "配置" },
        { "type": "text", "id": "custom_class", "label": "自定义class" }
    ],
    "blocks": [
        {
            "type": "item",
            "name": "Item",
            "settings": [
                { "type": "image_picker", "id": "image", "label": "图片" },
                { "type": "text", "id": "title", "label": "标题" },
                { "type": "text", "id": "info", "label": "内容" }
            ]
        }
    ],

    "presets": [
        {
        "name": "Custom Our Service",
        "category": "custom"
        }
    ]
}
{% endschema %}


{{ 'custom-our-service.css' | asset_url | stylesheet_tag }}

<div class="custom-our-service" data-section-id="{{ section.id }}">
    <div class="our-service-inner safe-container">
        {% if section.settings.title != blank %}
            <div class="section-title"><h2>{{ section.settings.title }}</h2></div>
        {% endif %}
        <div class="our-service-items">
            {% for block in section.blocks %}
                <div class="item">
                    {% if block.settings.image != blank %}
                        <div class="image">
                            <img src="{{ block.settings.image | image_url: width: 767 }}" width="auto" height="auto" />
                        </div>
                    {% endif %}
                    {% if block.settings.title != blank %}
                        <div class="title">{{ block.settings.title }}</div>
                    {% endif %}
                    {% if block.settings.info != blank %}
                        <div class="info">{{ block.settings.info }}</div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>