      });
      document.getElementById('left-button').onclick = function() {
      scrollLeft();
  };

  document.getElementById('right-button').onclick = function() {
      scrollRight();
  };

  function scrollLeft() {
      const scrollWrapper = document.querySelector('.ProductComparison_flex');
      scrollWrapper.scrollBy({
          left: -100,  // 向左滚动100px
          behavior: 'smooth'  // 平滑滚动
      });
  }

  function scrollRight() {
      const scrollWrapper = document.querySelector('.ProductComparison_flex');
      scrollWrapper.scrollBy({
          left: 100,  // 向右滚动100px
          behavior: 'smooth'  // 平滑滚动
      });
  }

  window.addEventListener('scroll', function() {
      var productComparison = document.querySelector('.ProductComparison');
      var productComparisonTop = document.querySelector('.ProductComparison_top');

      // 获取 ProductComparison 的 bounding rectangle
      var rect = productComparison.getBoundingClientRect();

      // 检查 ProductComparison 的顶部是否到达视口顶部
      if (rect.top <= 0 && rect.bottom > 0) {
          productComparisonTop.style.opacity = '1';
      } else {
          productComparisonTop.style.opacity = '0';
      }
  });
</script>

