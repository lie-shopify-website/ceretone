{
  "name": "产品对比",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "Boxstatus",
      "label": "顶部盒子状态",
      "options": [
        {
          "value": "block",
          "label": "显示"
        }, {
          "value": "none",
