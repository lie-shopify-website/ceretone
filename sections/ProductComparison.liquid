<style>
      [data-section-id="{{ section.id }}"] {
        background-color: {{ section.settings.bg_color }};
        padding-top: {{ section.settings.top_one |  append: 'px' }};
        padding-bottom: {{ section.settings.bottom_one |  append: 'px' }};
      }
      [data-section-id="{{ section.id }}"] .ProductComparison_h2 {
        text-align: {{ section.settings.text_align }};
        font-size: {{ section.settings.header_font_size |  append: 'px' }};
      }
      [data-section-id="{{ section.id }}"] .ProductComparison_p
      {
        text-align: {{ section.settings.text_align }};
        font-size: {{ section.settings.slogan_font_size |  append: 'px' }};
      }
      .ProductComparison_box{
        overflow-x: auto;
        scroll-behavior: smooth;
        width: 100%;
      }
      .ProductComparison_flex{
        display: flex;
        justify-content: space-between;
        position: relative;
        width: 100%;
        overflow-x: auto;
        scroll-behavior: smooth;
      }
      .ProductComparison_flex_box{
        flex: 0 0 calc(25% - 10px);
        margin: 5px;
        box-sizing: border-box;
        text-align: center;
      }
      .ProductComparison_flex_box_authentication{
        width: 100%;
        margin: 2rem 0;
      }
      .ProductComparison_flex_box_authentication_iamge{
        width: 45%;
