     .Product_XZ_F_B:hover .image1 {
     transform: translateX (100%) ;
     }
  */
    .Overall {
      margin: 3rem auto;
      text-align: center;
    }
    .Overall_btn {
      display: inline-block;
      background: #1566E0;
      color: #fff;
      padding: 1rem 3.5rem;
      border-radius: 2.4rem;
      font-size: 1.6rem;
      display: inline-block;
      text-decoration: none;
    }
    .Overall_btn:hover {
      background: #fff;
      color: #1566E0;
    }
    @media(max-width: 768px) {
      [data-section-id="{{ section.id }}"] {
        padding-top: {{ section.settings.padding_top_M | append: 'px' }};
        padding-bottom: {{ section.settings.padding_bottom_M | append: 'px' }};
      }
      .Product_XZ_F_B {
        width: calc((100% - 0rem) / 1);
        box-sizing: border-box;
      }
    }
</style>

<div data-section-id="{{ section.id }}" class="Product_XZ">
  {% if section.settings.tilie != blank %}
    <h2>{{ section.settings.tilie }}</h2>
  {% endif %}
  <div class="container">
    <div class="Product_XZ_IF">
      {% if section.settings.tilie_left != blank %}
        <div class="Product_XZ_IF_B">
          {% if section.settings.Icon != blank %}
            <img src="{{ section.settings.Icon | img_url: '200x' }}" alt="">
          {% endif %}
          <p>{{ section.settings.tilie_left }}</p>
        </div>
      {% endif %}
      {% if section.settings.tilie_right != blank %}
        <div class="Product_XZ_IF_B">
          {% if section.settings.Icon != blank %}
            <img src="{{ section.settings.Icon | img_url: '200x' }}" alt="">
          {% endif %}
          <p>{{ section.settings.tilie_right }}</p>
        </div>
      {% endif %}
    </div>
    <div class="Product_XZ_F">
      {% for block in section.blocks %}
        <div class="Product_XZ_F_B">
          {% if block.settings.image != blank %}
            {% if block.settings.ProductB != blank %}
              <p class="Product_XZ_F_B_img_p">{{ block.settings.ProductB }}</p>
            {% endif %}
            <div class="Product_XZ_F_B_img">
              {% if block.settings.link != blank %}<a href="{{ block.settings.link }}">{% endif %}
              <img
                class="image1"
                src="{{ block.settings.image | img_url: '640x' }}"
                alt=""
              >
              {% if block.settings.link != blank %}</a>{% endif %}
              {% comment %}
                <img
                        class="image2"
                        src="{{ block.settings.image2 | img_url: '640x' }}"
                        alt=""
                >
              {% endcomment %}
            </div>
          {% endif %}
          <div class="Product_XZ_F_B_T">
            <div class="Product_XZ_F_B_T_H">
              <h3>{{ block.settings.ProductName }}</h3>
              <div>
                <span class="Price_H">{{ block.settings.Price_H }}</span>
                <span class="Price">{{ block.settings.Price }}</span>
                <span style="color: #8F8F8F;">{{ block.settings.Price_SM }}</span>
              </div>
            </div>
            <p style="color: #1566E0;margin: 1rem 0;">{{ block.settings.DiscountT }}</p>
            {% if block.settings.link != blank %}
              <a class="Product_XZ_L" href="{{ block.settings.link }}">
                {% if block.settings.icon != blank %}
                  <img src="{{ block.settings.icon | img_url: '200x' }}" alt="">
                {% endif %}
                <span>{{ block.settings.linktext }}</span>
              </a>
            {% endif %}
            <div class="Product_XZ_TW">
              <h6>{{ block.settings.heading }}</h6>
              <p>
                {% if block.settings.inticon1 != blank %}
                  <img src="{{ block.settings.inticon1 | img_url: '200x' }}" alt="">
                {% endif %}
                <span>{{ block.settings.introduce1 }}</span>
              </p>
              <p>
                {% if block.settings.inticon2 != blank %}
                  <img src="{{ block.settings.inticon2 | img_url: '200x' }}" alt="">
                {% endif %}
                <span>{{ block.settings.introduce2 }}</span>
              </p>
              <p>
                {% if block.settings.inticon3 != blank %}
                  <img src="{{ block.settings.inticon3 | img_url: '200x' }}" alt="">
                {% endif %}
                <span>{{ block.settings.introduce3 }}</span>
              </p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="Overall">
      {% if section.settings.link != blank %}
        <a class="Overall_btn" href="{{ section.settings.link }}">{{ section.settings.linktext }}</a>
      {% endif %}
    </div>
  </div>
</div>

