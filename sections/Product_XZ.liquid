<style>
    [data-section-id="{{ section.id }}"] {
      background-color: {{ section.settings.bg_color }};
      padding-top: {{ section.settings.padding_top | append: 'px' }};
      padding-bottom: {{ section.settings.padding_bottom | append: 'px' }};
    }
    [data-section-id="{{ section.id }}"] .Product_XZ h2 {
      margin: 0;
      text-align: center;
    }
    .Product_XZ_IF {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .Product_XZ_IF_B {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0 20px;
    }
    .Product_XZ h2 {
      margin: 0;
      text-align: center;
    }
    .Product_XZ_F {
      display: flex;
      flex-wrap: wrap;
      gap: 5rem;
    }
    .Product_XZ_F_B {
      width: calc((100% - 10rem) / 3);
      box-sizing: border-box;
    }
    .Product_XZ_IF_B img {
      width: 3rem;
      display: block;
      margin-right: 1rem;
    }
    .Product_XZ_F_B_img {
      position: relative;
    }
    .Product_XZ_F_B_img img {
      display: block;
      width: 100%;
    }
    .Product_XZ_F_B_img_p {
      color: #fff;
      padding: 0.5rem 1.5rem;
      background-color: #1566E0;
      margin: 0;
      text-align: center;
    }
    .Product_XZ_F_B_T_H {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
    }
    .Product_XZ_F_B_T_H h3 {
      margin: 0;
    }
    .Product_XZ_F_B_T {
      margin-top: 1.3rem;
    }
    .Price_H {
      font-size: 2rem;
      font-weight: 600;
      text-decoration: line-through;
      color: #BFBFBF;
    }
    .Price {
      font-size: 2rem;
      font-weight: 600;
      color: #F58B00;
    }

    .Product_XZ_L {
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 1rem;
      text-decoration: none;
      font-size: 2rem;
      margin-bottom: 1.4rem;
      background: #fff;
      border: 1px solid #000;
      padding: 1rem 0;
      font-weight: 600;
    }
    .Product_XZ_L:hover {
      background: #1566E0;
      color: #fff;
    }
    .Product_XZ_L img {
      display: block;
      width: 3rem;
      margin-right: 1.5rem;
    }
    .Product_XZ_TW h6 {
      margin: 0;
    }
    .Product_XZ_TW p {
      display: flex;
      align-items: center;
    }
    .Product_XZ_TW p img {
      width: 3rem;
      margin-right: 1.5rem;
      display: block;
    }


