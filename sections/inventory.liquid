<style>
  [data-section-id="{{ section.id }}"] {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.top_one |  append: 'rem' }};
    padding-bottom: {{ section.settings.bottom_one |  append: 'rem' }};
  }
  .inventory_header {
    margin: 0 6rem;
  }
  [data-section-id="{{ section.id }}"] .inventory_header h2 {
    text-align: {{ section.settings.text_align }};
    margin: 0 0 2rem;
  }
  [data-section-id="{{ section.id }}"] .inventory_header h4 {
    text-align: {{ section.settings.text_align }};
    margin: 0 0 2rem;
  }
  [data-section-id="{{ section.id }}"] .inventory_header_box {
    display: flex;
    justify-content: space-around;
    flex-direction: {{ section.settings.flex_direction }};
  }
  [data-section-id="{{ section.id }}"] .inventory_header_box p {
    flex: 1;
    text-align: {{ section.settings.Copywriting_align }};
    margin: 0 0 2rem;
    padding: 0 2rem;
  }
  .container_body {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 1rem;
  }
  .container_body_lisk_iamge {
    background-color: #F5F5F5;
  }
  .container_body_lisk_iamge img {
    width: 100%;
    height: auto;
    display: block;
  }
  .container_body_lisk {
    flex: 1 1 calc(20% - 1rem);
    box-sizing: border-box;
    padding: 1rem;
    margin: 0;
    text-align: center;

  }

  @media (max-width: 1024px) {
    .container_body_lisk {
      flex: 1 1 calc(33.33% - 1rem);
    }
  }

  @media (max-width: 768px) {
    .container_body_lisk:first-child {
      flex: 1 1 100%;
    }

    .container_body_lisk {
      flex: 1 1 calc(50% - 1rem);
      padding: 0;
    }
  }
</style>

<div data-section-id="{{ section.id }}" class="inventory">
  <div class="container">
    <div class="inventory_header">
      {% if section.settings.title != blank %}
        <h2 class="h2">{{ section.settings.title | newline_to_br }}</h2>
      {% endif %}
      {% if section.settings.subtitle != blank %}
        <h4 class="h4">{{ section.settings.subtitle | newline_to_br }}</h4>
      {% endif %}
      <div class="inventory_header_box">
        {% if section.settings.Copywriting != blank %}
          <p>{{ section.settings.Copywriting | newline_to_br }}</p>
        {% endif %}
        {% if section.settings.Copywriting_fu != blank %}
          <p>{{ section.settings.Copywriting_fu | newline_to_br }}</p>
        {% endif %}
      </div>
    </div>
    <div class="container_body">
      {% for block in section.blocks %}
        <div class="container_body_lisk">
          {% if block.settings.image != blank %}
            <div class="container_body_lisk_iamge">
              {{
                block.settings.image
                | image_url: width: block.settings.image.width
                | image_tag:
                  loading: 'lazy',
                  widths: '2200, 2400, 2600, 2800, 3000, 3264, 3400, 3584, 3800, 4000, 4200, 4400, 4600, 4800, 5000, 5200, 5400, 5600',
                  sizes: sizes
              }}
            </div>
          {% endif %}
          {% if block.settings.title != blank %}
            <p class="container_body_lisk_p">
              {{ block.settings.title | newline_to_br }}
            </p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "产品清单",
  "settings": [
    {
      "type": "range",
      "id": "top_one",
      "label": "上边距",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "rem",
      "default": 5
    },
    {
      "type": "range",
      "id": "bottom_one",
      "label": "下边距",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "rem",
      "default": 5
    },
    {
      "type": "range",
      "id": "top_one_mic",
      "label": "移动端上边距",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "rem",
      "default": 2
    },
    {
      "type": "range",
      "id": "bottom_one_mic",
      "label": "移动端下边距",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "rem",
      "default": 2
    }, {
      "type": "color",
      "id": "bg_color",
      "label": "背景颜色",
      "default": "#fff"
    }, {
      "type": "select",
      "id": "text_align",
      "label": "文本对齐方式",
      "options": [
        {
          "value": "left",
          "label": "靠左"
        }, {
          "value": "center",
          "label": "居中"
        }, {
          "value": "right",
          "label": "靠右"
        }
      ],
      "default": "center"
    }, {
      "type": "textarea",
      "id": "title",
      "label": "标题"
    }, {
      "type": "textarea",
      "id": "subtitle",
      "label": "副标题"
    }, {
      "type": "select",
      "id": "flex_direction",
      "label": "主图布局方式",
      "options": [
        {
          "value": "column",
          "label": "上下排序"
        }, {
          "value": "row",
          "label": "左右排序"
        }
      ],
      "default": "row"
    }, {
      "type": "select",
      "id": "Content_quantity",
      "label": "内容区一行数量",
      "options": [
        {
          "value": "25",
          "label": "四个"
        }, {
          "value": "50",
          "label": "两个"
        }
      ],
      "default": "25"
    }, {
      "type": "checkbox",
      "id": "show_text_box",
      "default": true,
      "label": "是否启用内容区自动标齐"
    }, {
      "type": "select",
      "id": "Copywriting_align",
      "label": "文案对齐方式",
      "options": [
        {
          "value": "left",
          "label": "靠左"
        }, {
          "value": "center",
          "label": "居中"
        }, {
          "value": "right",
          "label": "靠右"
        }
      ],
      "default": "center"
    }, {
      "type": "textarea",
      "id": "Copywriting",
      "label": "主文案"
    }, {
      "type": "textarea",
      "id": "Copywriting_fu",
      "label": "副文案"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "添加清单",
      "limit": 50,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "图片"
        }, {
          "type": "textarea",
          "id": "title",
          "label": "标题"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "产品清单",
      "blocks": [
        {
          "type": "slide"
        }, {
          "type": "slide"
        }, {
          "type": "slide"
        }, {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
