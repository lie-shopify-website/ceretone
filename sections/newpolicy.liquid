<style>
  [data-section-id="{{ section.id }}"] {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.top_one |  append: 'px' }};
    padding-bottom: {{ section.settings.bottom_one |  append: 'px' }};
  }
  [data-section-id="{{ section.id }}"] .newpolicy_h2 {
    text-align: center;
    margin: 0 0 3rem;
    color: {{ section.settings.siez_color }};
  }
  [data-section-id="{{ section.id }}"] .newpolicy_box {
    border-radius: 1.2rem;
    padding: 6rem 4rem;
    box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.5);
    background-color: {{ section.settings.bog_color }};
  }
  .newpolicy_flex {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .newpolicy_flex_box {
    display: flex;
    width: calc((100% - 4rem) / 3);
    box-sizing: border-box;
    align-items: center;
  }
  .newpolicy_flex_box_h4 {
    margin: 0 0 0.4rem;
    font-size: 2rem;
    font-weight: 700;
    color: {{ section.settings.siez_color }};
  }
  .newpolicy_flex_box_p {
    font-size: 1.6rem;
    margin: 0;
    color: {{ section.settings.siez_color }};
  }
  .newpolicy_flex_box_img {
    width: 6rem;
    margin-right: 2rem;
    height: auto;
  }
  .Overall_btn {
    display: inline-block;
    background: #1566E0;
    color: #fff;
    padding: 1rem 3.5rem;
    border-radius: 2.4rem;
    font-size: 1.6rem;
    display: inline-block;
    text-decoration: none;
  }
  .Overall_btn:hover {
    background: #fff;
    color: #1566E0;
  }
  @media(max-width: 768px) {
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.top_one_mic |  append: 'px' }};
      padding-bottom: {{ section.settings.bottom_one_mic |  append: 'px' }};
    }
    [data-section-id="{{ section.id }}"] .newpolicy_box {
      padding: 3rem 2rem;
    }
    .newpolicy_flex_box {
      width: calc((100% - 0rem) / 1);
    }
    .newpolicy_flex {
      gap: 3rem;
    }
    .newpolicy_flex_box_img {
      width: 5rem;
      margin-right: 1rem;
      height: auto;
    }
    .newpolicy_flex_box_h4 {
      font-size: 1.9rem;
    }
    .newpolicy_flex_box_p {
      font-size: 1.5rem;
    }
  }
</style>

<div data-section-id="{{ section.id }}" class="newpolicy">
  <div class="container">
    <div class="newpolicy_box">
      {% if section.settings.title != blank %}
        <h2 class="newpolicy_h2 h2">{{ section.settings.title }}</h2>
      {% endif %}
      <div class="newpolicy_flex">
        {% for block in section.blocks %}
          <div class="newpolicy_flex_box">
            <div class="newpolicy_flex_box_left">
              {% if block.settings.image != blank %}
                {{
                  block.settings.image
                  | image_url: width: section.settings.image.width
                  | image_tag:
                    loading: 'lazy',
                    widths: '360, 533, 720, 940, 1066, 1200, 1400, 1600, 1800, 2000, 2200, 2400, 2600, 2800, 3000, 3264, 3400, 3584, 3800, 4000, 4200, 4400, 4600, 4800, 5000, 5200, 5400, 5600',
                    sizes: sizes,
                    class: 'newpolicy_flex_box_img'
                }}
              {% endif %}
            </div>
            <div class="newpolicy_flex_box_right">
              {% if block.settings.title != blank %}
                <h3 class="newpolicy_flex_box_h4">{{ block.settings.title | newline_to_br }}</h3>
              {% endif %}
              {% if block.settings.text != blank %}
                <p class="newpolicy_flex_box_p">{{ block.settings.text | newline_to_br }}</p>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="Overall">
      {% if section.settings.link != blank %}
        <a class="Overall_btn" href="{{ section.settings.link }}">{{ section.settings.linktext }}</a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "政策",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "top_one",
      "label": "上边距",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "bottom_one",
      "label": "下边距",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "top_one_mic",
      "label": "移动端上边距",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "bottom_one_mic",
      "label": "移动端下边距",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "default": 20
    }, {
      "type": "textarea",
      "id": "title",
      "label": "标题"
    }, {
      "type": "color",
      "id": "bg_color",
      "label": "背景颜色",
      "default": "#fff"
    }, {
      "type": "color",
      "id": "bog_color",
      "label": "内容块背景色",
      "default": "#37465a"
    }, {
      "type": "color",
      "id": "siez_color",
      "label": "字体颜色",
      "default": "#fff"
    }, {
      "type": "text",
      "id": "linktext",
      "label": "链接文本"
    }, {
      "type": "url",
      "id": "link",
      "label": "链接"
    }

  ],
  "blocks": [
    {
      "type": "slide",
      "name": "添加政策",
      "limit": 50,
      "settings": [
        {
          "type": "textarea",
          "id": "title",
          "label": "标题"
        }, {
          "type": "textarea",
          "id": "text",
          "label": "文本"
        }, {
          "type": "image_picker",
          "id": "image",
          "label": "政策图标"
        }
      ]
    }

  ],
  "presets": [
    {
      "name": "政策",
      "blocks": [
        {
          "type": "slide"
        }, {
          "type": "slide"
        }, {
          "type": "slide"
        }, {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
